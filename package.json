{
  "name": "asap",
  "version": "0.1.0",
  "private": true,
  "description": "Task Manager & To-Do List - all in one place!",
  "scripts": {
    "start": "react-scripts start",
    "build": "react-scripts build",
    "eject": "react-scripts eject",
    "reset": "rm -rf node_modules && rm yarn.lock && yarn",
    "install-all": "yarn && yarn server-install",
    "start-server": "cd server && yarn start",
    "server-install": "cd server && yarn",
    "lint": "eslint '*/**/*.{js,ts,tsx}' --quiet --fix",
    "release": "standard-version -- --release-as major",
    "minor-release": "standard-version -- --release-as minor",
    "patch-release": "standard-version -- --release-as patch"
  },
  "eslintConfig": {
    "extends": "react-app"
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "dependencies": {
    "@emotion/core": "^10.0.28",
    "@emotion/styled": "^10.0.27",
    "@sentry/browser": "^5.15.5",
    "bootstrap": "^4.5.0",
    "date-fns": "^2.14.0",
    "formik": "^2.1.4",
    "react": "^16.13.1",
    "react-bootstrap": "^1.0.1",
    "react-dom": "^16.13.1",
    "react-helmet": "^6.0.0",
    "react-router-dom": "^5.2.0",
    "react-scripts": "3.4.1",
    "yup": "^0.29.0"
  },
  "devDependencies": {
    "@commitlint/cli": "^8.3.5",
    "@commitlint/config-conventional": "^8.3.4",
    "@types/node": "^12.0.0",
    "@types/react": "^16.9.0",
    "@types/react-dom": "^16.9.0",
    "@types/react-helmet": "^6.0.0",
    "@types/react-router-dom": "^5.1.5",
    "@types/yup": "^0.29.0",
    "@welldone-software/why-did-you-render": "^4.2.2",
    "cz-conventional-changelog": "^3.2.0",
    "eslint-config-airbnb": "^18.1.0",
    "eslint-config-prettier": "^6.11.0",
    "eslint-import-resolver-typescript": "^2.0.0",
    "eslint-plugin-prettier": "^3.1.3",
    "husky": "^4.2.5",
    "lint-staged": "^10.2.6",
    "prettier": "^2.0.5",
    "standard-version": "^8.0.0",
    "typescript": "^3.9.3"
  },
  "lint-staged": {
    "*.{ts, tsx, js, jsx, json, md}": [
      "prettier --write",
      "eslint --fix"
    ],
    "src/*.{js, jsx, ts, tsx, json}": [
      "prettier --write",
      "eslint --fix"
    ],
    "src/**/*.{js, jsx, ts, tsx, json}": [
      "prettier --write",
      "eslint --fix"
    ],
    "server/src/*.{js, jsx, ts, tsx, json}": [
      "prettier --write",
      "eslint --fix"
    ],
    "server/src/**/*.{js, jsx, ts, tsx, json}": [
      "prettier --write",
      "eslint --fix"
    ]
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged",
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS"
    }
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  },
  "license": "MIT",
  "repository": {
    "url": "https://github.com/g-ravity/asap"
  },
  "author": {
    "name": "Slytherin Inc."
  }
}
